<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 投票网站</title>
    <meta name="keywords" content="关键字" />
    <meta name="description" content="描述" />
    <link rel="stylesheet" href="/styles/Simplex.css" />
    <link rel="shortcut icon" href="/img/favicon.ico" />
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
    <style>
        a:hover{
            text-decoration: none;
        }
        a:focus{
            text-decoration: none;
        }
    </style>
</head>
<body>
    <!--navs tart-->
            <nav class="navbar navbar-default">
                <div class="container">
                <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">投票网</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @foreach(var category in ViewBag.Categorys){
                        <li><a href="#">@category.Title</a></li>
                    }
                    @*<li class="active"><a href="#">摄影 <span class="sr-only">(current)</span></a></li>*@
                    <li class="dropdown">
                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">全部分类 <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        @{
                            for(int i=1;i<=20;i++)
                            {
                                <li><a href="#">第 @i 期</a></li>
                            }
                        }
                    </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                <!--<ul class="nav navbar-nav navbar-right">
                    <li><a href="#">其它</a></li>
                </ul>-->
                </div>
                </div>
            </nav>
        <!--nav end-->
   
    <div class="container ">
        @RenderBody()
    </div>
    <footer class="footer">
            <div class="container">
                <p class="text-right text-muted">@DateTime.Now.Year &copy; 版权所有.</p>
            </div>
    </footer>
</body>
</html>
<script src="/scripts/jquery.min.js"></script>
<script src="/scripts/bootstrap.min.js"></script>
