@{ 
    Layout = null;
}
<link href="~/styles/bootstrap.min.css" rel="stylesheet"/>
<div class="container">
    <h3></h3>
    <div class="col-md-5">
        <form asp-action="Login" asp-controller="Account" method="post" class="form-horizontal" role="form">
            <fieldset>
                <legend>后台登陆</legend>
                <div class="form-group">
                    <label for="txt_UserName" class="col-md-2">用户名</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="txt_UserName" name="username" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="txt_Password" class="col-md-2">密码</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" name="password" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2"></label>
                    <div class="col-md-10">
                        <input type="submit" class="form-control btn btn-success" value="登陆" />
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
